<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Coder.Desktop.App.Views.MessageWindow"
        Width="500" Height="240"
        CanResize="False"
        WindowStartupLocation="CenterScreen">

    <DockPanel Margin="16" LastChildFill="True">
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
            <Button Content="Close" Click="CloseClicked" />
        </StackPanel>

        <StackPanel Spacing="12">
            <TextBlock Text="{Binding MessageTitle}" FontSize="18" FontWeight="SemiBold" />
            <ScrollViewer>
                <TextBlock Text="{Binding MessageContent}" TextWrapping="Wrap" />
            </ScrollViewer>
        </StackPanel>
    </DockPanel>
</Window>
